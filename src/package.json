{
    "name": "ex-installer-electron",
    "version": "0.1.0",
    "description": "EX-Installer - Electron/Aurelia 2 frontend",
    "private": true,
    "main": "out/main/index.js",
    "scripts": {
        "dev": "electron-vite dev",
        "debug": "electron-vite dev --inspect=9229",
        "build": "electron-vite build",
        "preview": "electron-vite preview",
        "start": "electron-vite dev",
        "typecheck": "tsc --noEmit -p tsconfig.node.json && tsc --noEmit -p tsconfig.web.json",
        "lint": "eslint src --ext .ts,.html"
    },
    "dependencies": {
        "@aurelia/vite-plugin": "^2.0.0-rc.0",
        "@syncfusion/ej2": "^32.1.24",
        "aurelia": "^2.0.0-rc.0",
        "python-shell": "^5.0.0",
        "serialport": "^12.0.0",
        "usb": "^2.13.0"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.2.0",
        "@types/node": "^24.10.13",
        "electron": "^40.6.0",
        "electron-vite": "^5.0.0",
        "tailwindcss": "^4.2.0",
        "typescript": "^5.7.0",
        "vite": "^7.3.1"
    },
    "engines": {
        "node": ">=24.0.0",
        "pnpm": ">=10.0.0"
    },
    "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
    "build": {
        "appId": "org.dcc-ex.installer",
        "productName": "EX-Installer",
        "directories": {
            "output": "release"
        },
        "files": [
            "out/**/*",
            "!node_modules/**/*"
        ],
        "extraResources": [
            {
                "from": "python",
                "to": "python"
            }
        ],
        "nativeRebuilder": "prebuild-install",
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Utility"
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "mac": {
            "target": [
                "dmg"
            ]
        }
    }
}